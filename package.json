{
  "name": "covid-employer-response",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "scripts": {
    "build": "razzle build",
    "build:stats": "cross-env STATS=yes razzle build && webpack-bundle-analyzer build\\public\\stats.json",
    "debug": "razzle start --inspect --inspect-port=9230",
    "lint:ts": "eslint --ext=jsx,ts,tsx src",
    "start": "razzle start",
    "start:prod": "node build/server.js",
    "test": "razzle test --env=jsdom",
    "test:ci": "cross-env CI=true razzle test --env=jsdom --watchAll=false",
    "test:coverage": "razzle test --env=jsdom --coverage"
  },
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "deepmerge": "^4.2.2",
    "express": "^4.16.3",
    "prop-types": "^15.7.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-helmet": "^6.0.0-beta.2",
    "react-helmet-async": "^1.0.4",
    "react-markdown": "^4.3.1",
    "react-modal": "^3.11.2",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.1.2",
    "react-spinners": "^0.6.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "yaml": "^1.8.3"
  },
  "devDependencies": {
    "@types/accept-language-parser": "^1.5.1",
    "@types/express": "^4.11.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-helmet": "^5.0.15",
    "@types/react-modal": "^3.10.5",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-test-renderer": "^16.9.2",
    "@types/webpack-env": "^1.13.6",
    "@types/yaml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^25.2.3",
    "razzle": "^3.0.0",
    "razzle-plugin-scss": "^3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^25.0.0",
    "tslint": "^5.19.0",
    "typescript": "^3.2.2",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-stats-plugin": "^0.3.1"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*(spec|test).(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
