{
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[yml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    "eslint.nodePath": "./node_modules",
    "eslint.options": { "configFile": "./.eslintrc.js" },
    "eslint.packageManager": "yarn",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__snapshots__/**": true,
        "build/**": true,
        "coverage/**": true,
        "node_modules/**": true
    }
}
